<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/setting_flow"
    app:startDestination="@id/settingFragment">

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.soma.lof.setting.SettingFragment"
        android:label="SettingFragment" >
        <action
            android:id="@+id/action_settingFragment_to_modifyProfileFragment"
            app:destination="@id/modifyProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/modifyProfileFragment"
        android:name="com.soma.lof.setting.ModifyProfileFragment"
        android:label="ModifyProfileFragment" />
</navigation>